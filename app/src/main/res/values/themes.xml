<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MobProgProjectLEC" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowActionBar">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_2</item>
        <item name="colorPrimaryVariant">@color/pink_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_2</item>
        <item name="colorSecondaryVariant">@color/brown_2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
<!--    <style name="Theme.MobProgProjectLEC.NoActionBar">-->
<!--        <item name="windowActionBar">false</item>-->
<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->
    <style name="Theme.MobProgProjectLEC.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MobProgProjectLEC.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="RatingBar" parent="Theme.AppCompat">
        <item name = "colorControlNormal">@color/white</item>
        <item name ="colorControlActivated">@color/yellow</item>
    </style>
</resources>