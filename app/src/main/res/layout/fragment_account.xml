<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.AccountFragment"
    android:orientation="vertical"
    android:background="@color/pink_2">

    <include layout="@layout/background_layout"/>

    <TextView
        android:id="@+id/tvAccountDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Detail"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="100dp"
        android:textStyle="bold"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:text="Everything about your account"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="@color/white"/>

    <LinearLayout
        android:id="@+id/llUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="200dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="95dp"
            android:layout_marginTop="40dp"
            android:text="Username"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/nav_acc"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <TextView
                android:id="@+id/accUsername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="30dp"
                android:textColor="@color/brown_2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/llUsername"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="95dp"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/acc_email"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <TextView
                android:id="@+id/accEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="30dp"
                android:textColor="@color/brown_2"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/llEmail"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="95dp"
            android:layout_marginTop="40dp"
            android:text="Password"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginHorizontal="40dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/acc_pass"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <TextView
                android:id="@+id/accPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:textSize="30dp"
                android:textColor="@color/brown_2"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/editAccBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_centerHorizontal="true"
        android:text="Edit Account"
        android:layout_below="@+id/llPassword"/>

</RelativeLayout>