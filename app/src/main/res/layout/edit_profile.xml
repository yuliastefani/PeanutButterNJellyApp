<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintCircleRadius="40dp">

    <ImageView
        android:id="@+id/closeDialog"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_close"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:onClick="closeDialog"
        app:tint="@color/brown_1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Account"
        android:textSize="30dp"
        android:gravity="center"
        android:textColor="@color/brown_2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:text="Username"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/nav_acc"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <EditText
                android:id="@+id/accUsernameEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:hint="Update Username"
                android:inputType="text"
                android:textColor="@color/brown_1"
                android:textColorHint="@color/brown_3"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:text="Email"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/acc_email"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <EditText
                android:id="@+id/accEmailEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:hint="Update Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/brown_1"
                android:textColorHint="@color/brown_3"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginStart="55dp"
            android:layout_marginTop="40dp"
            android:text="Password"
            android:textSize="18dp"
            android:textStyle="italic"
            android:textColor="@color/brown_1"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/acc_pass"
                android:gravity="center_vertical"
                app:tint="@color/brown_1" />


            <EditText
                android:id="@+id/accPasswordEdt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:hint="Update Password"
                android:inputType="textPassword"
                android:textColor="@color/brown_1"
                android:textColorHint="@color/brown_3"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/updAccBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20dp"
        android:layout_gravity="center"
        android:textSize="20dp"
        android:text="Update"/>

</LinearLayout>